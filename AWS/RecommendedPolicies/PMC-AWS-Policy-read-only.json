{
    "Version": "2012-10-17",
    "Id": "ParkMyCloudReadOnlyPolicyAsOf2020-03-05",
    "Statement": [{
            "Sid": "ParkMyCloudManagement",
            "Action": [
                "autoscaling:Describe*",
                "ce:Describe*",
                "ce:Get*",
                "ce:List*",
                "ec2:Describe*",
                "ecs:Describe*",
                "ecs:List*",
                "eks:Describe*",
                "eks:List*",
                "iam:GetUser",
                "rds:Describe*",
                "rds:ListTagsForResource",
                "savingsplans:Describe*"
            ],
            "Resource": "*",
            "Effect": "Allow"
        },
        {
            "Sid": "ParkMyCloudCloudWatchAccess",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:GetMetricStatistics",
                "cloudwatch:ListMetrics"
            ],
            "Resource": "*",
            "Condition": {
                "Bool": {
                    "aws:SecureTransport": "true"
                }
            }
        }
    ]
}